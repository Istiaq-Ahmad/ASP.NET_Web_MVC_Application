@model WebApplication1.Models.AddEmployeeViewModel

<h1>Add Employee</h1>

<form method="post">

    <div class="mt-3">
    <lable class="form-lable">Name</lable>
    <input type="text" class="form-control" asp-for="Name"/>
    </div>

    <div class="mt-3">
    <lable class="form-lable">Blood Group</lable>
    <input type="text" class="form-control" asp-for="BloodGroup"/>
    </div>

    <div class="mt-3">
    <lable class="form-lable">Mobile Number</lable>
    <input type="text" class="form-control" asp-for="MobileNumber"/>
    </div>

    <div class="mt-3">
    <lable class="form-lable">Email</lable>
    <input type="email" class="form-control" asp-for="Email"/>
    </div>

    <div class="mt-3">
    <lable class="form-lable">Address</lable>
    <input type="text" class="form-control" asp-for="Address" />
    </div>

    <div class="mt-3">
    <lable class="form-lable">Projects</lable>
    <input type="text" class="form-control" asp-for="Projects" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Insert</button>
    </div>

</form>
