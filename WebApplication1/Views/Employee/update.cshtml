@{
}

@model WebApplication1.Models.Entities.Employee

<h1>Update Employee</h1>

@if (Model == null)
{
    <p>No employee was found with the Id</p>
}

else
{
    <form method="post">
        <div class="mt-3">
            <lable class="form-lable">Id</lable>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Name</lable>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Blood Group</lable>
            <input type="text" class="form-control" asp-for="BloodGroup" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Mobile Number</lable>
            <input type="text" class="form-control" asp-for="MobileNumber" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Email</lable>
            <input type="email" class="form-control" asp-for="Email" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Address</lable>
            <input type="text" class="form-control" asp-for="Address" />
        </div>

        <div class="mt-3">
            <lable class="form-lable">Projects</lable>
            <input type="text" class="form-control" asp-for="Projects" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>

            <button type="submit" class="btn btn-danger ms-3" asp-controller="Employee" asp-action="Delete">Delete</button>
        </div>

    </form>
}